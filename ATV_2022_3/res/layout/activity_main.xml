<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/cuadrado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="60dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/pentagono"
        app:layout_constraintEnd_toStartOf="@+id/pentagono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pentagono" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="33dp"
        android:fontFamily="casual"
        android:text="Cuadrado"
        android:textColor="#F80707"
        app:layout_constraintEnd_toEndOf="@+id/cuadrado"
        app:layout_constraintTop_toBottomOf="@+id/cuadrado" />

    <Button
        android:id="@+id/trapecio"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="56dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/trinangulo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:text="Triangulo"
        android:textColor="#FB0606"
        app:layout_constraintStart_toStartOf="@+id/trinangulo"
        app:layout_constraintTop_toBottomOf="@+id/trinangulo" />

    <Button
        android:id="@+id/trinangulo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="57dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/trapecio"
        app:layout_constraintEnd_toStartOf="@+id/trapecio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/trapecio"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="DuplicateSpeakableTextCheck,ImageContrastCheck" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:text="Trapecio"
        android:textColor="#F60505"
        app:layout_constraintStart_toStartOf="@+id/trapecio"
        app:layout_constraintTop_toBottomOf="@+id/trapecio" />

    <Button
        android:id="@+id/pentagono"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="34dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cuadrado"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="115dp"
        android:fontFamily="casual"
        android:text="Pentagono"
        android:textColor="#F30505"
        app:layout_constraintStart_toStartOf="@+id/pentagono"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>