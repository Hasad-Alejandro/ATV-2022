<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    tools:context=".triangulo">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="204dp"
      android:layout_height="83dp"
      android:layout_marginStart="108dp"
      android:layout_marginTop="32dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/triangulo" />

  <Button
      android:id="@+id/cac"
      android:layout_width="190dp"
      android:layout_height="52dp"
      android:layout_marginBottom="252dp"
      android:text="Calcular"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.027"
      app:layout_constraintStart_toStartOf="parent" />

  <EditText
      android:id="@+id/Ld"
      android:layout_width="170dp"
      android:layout_height="36dp"
      android:layout_marginTop="136dp"
      android:layout_marginEnd="68dp"
      android:ems="10"
      android:hint="@string/app_name"
      android:inputType="number"
      android:minHeight="48dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="46dp"
      android:layout_height="38dp"
      android:layout_marginStart="48dp"
      android:layout_marginTop="160dp"
      android:fontFamily="sans-serif-black"
      android:text="Lado"
      android:textSize="16sp"
      app:layout_constraintEnd_toStartOf="@+id/Ld"
      app:layout_constraintHorizontal_bias="0.222"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2" />

  <TextView
      android:id="@+id/Rarr"
      android:layout_width="133dp"
      android:layout_height="42dp"
      android:layout_marginStart="84dp"
      android:layout_marginTop="4dp"
      android:textSize="20sp"
      app:layout_constraintStart_toEndOf="@+id/Area"
      app:layout_constraintTop_toBottomOf="@id/Area" />

  <TextView
      android:id="@+id/Rperi"
      android:layout_width="132dp"
      android:layout_height="41dp"
      android:layout_marginStart="72dp"
      android:layout_marginBottom="20dp"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="@+id/perimetro1"
      app:layout_constraintStart_toEndOf="@+id/perimetro1" />

  <TextView
      android:id="@+id/perimetro1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="64dp"
      android:layout_marginTop="24dp"
      android:fontFamily="sans-serif-black"
      android:text="Perimetro"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2" />

  <TextView
      android:id="@+id/Area"
      android:layout_width="58dp"
      android:layout_height="28dp"
      android:layout_marginStart="64dp"
      android:layout_marginTop="16dp"
      android:fontFamily="sans-serif-black"
      android:text="Area"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/perimetro1" />

  <EditText
      android:id="@+id/Altura"
      android:layout_width="164dp"
      android:layout_height="38dp"
      android:layout_marginStart="92dp"
      android:layout_marginTop="30dp"
      android:layout_marginBottom="28dp"
      android:ems="10"
      android:hint="@string/app_name"
      android:inputType="numberDecimal"
      android:minHeight="48dp"
      app:layout_constraintBottom_toTopOf="@+id/Ld"
      app:layout_constraintStart_toEndOf="@+id/textView11"
      app:layout_constraintTop_toBottomOf="@+id/base"
      app:layout_constraintVertical_bias="1.0" />

  <EditText
      android:id="@+id/base"
      android:layout_width="165dp"
      android:layout_height="42dp"
      android:layout_marginStart="44dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="29dp"
      android:ems="10"
      android:hint="@string/app_name"
      android:inputType="numberDecimal"
      android:minHeight="48dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/textView10"
      app:layout_constraintTop_toBottomOf="@+id/imageView2" />

  <TextView
      android:id="@+id/textView10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginTop="39dp"
      android:fontFamily="sans-serif-black"
      android:text="Base"
      android:textSize="16sp"
      app:layout_constraintEnd_toStartOf="@+id/base"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2" />

  <TextView
      android:id="@+id/textView11"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="36dp"
      android:fontFamily="sans-serif-black"
      android:text="Altura"
      android:textSize="16sp"
      app:layout_constraintBottom_toTopOf="@+id/textView2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2"
      app:layout_constraintVertical_bias="0.677" />

</androidx.constraintlayout.widget.ConstraintLayout>