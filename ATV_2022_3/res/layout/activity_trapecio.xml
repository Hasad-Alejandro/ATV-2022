<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trapecio">

    <TextView
        android:id="@+id/Area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="86dp"
        android:fontFamily="sans-serif-black"
        android:text="Area"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Rarr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perimetro1" />

    <TextView
        android:id="@+id/Rperi"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="74dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/Rarr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/perimetro1"
        app:layout_constraintTop_toTopOf="@+id/cac" />

    <TextView
        android:id="@+id/perimetro1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="27dp"
        android:fontFamily="sans-serif-black"
        android:text="Perimetro"
        app:layout_constraintBottom_toTopOf="@+id/Area"
        app:layout_constraintEnd_toStartOf="@+id/Rperi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cac" />

    <EditText
        android:id="@+id/Bas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint=""
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/bm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/Ld"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="133dp"
        android:ems="10"
        android:hint=""
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/perimetro1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/bm" />

    <Button
        android:id="@+id/cac"
        android:layout_width="136dp"
        android:layout_height="0dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="20dp"
        android:text="Calcular"
        app:layout_constraintBottom_toTopOf="@+id/perimetro1"
        app:layout_constraintEnd_toEndOf="@+id/Rperi"
        app:layout_constraintStart_toStartOf="@+id/perimetro1"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="63dp"
        android:fontFamily="sans-serif-black"
        android:text="Base menor"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintEnd_toStartOf="@+id/alu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Basema" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="62dp"
        android:fontFamily="sans-serif-black"
        android:text="Lado"
        app:layout_constraintBottom_toBottomOf="@+id/Basema"
        app:layout_constraintEnd_toStartOf="@+id/Bas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/bm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint=""
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/alu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Basema"
        app:layout_constraintTop_toBottomOf="@+id/Bas" />

    <EditText
        android:id="@+id/alu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint=""
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/bm" />

    <TextView
        android:id="@+id/Basema"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="sans-serif-black"
        android:text="Base mayor"
        app:layout_constraintBottom_toBottomOf="@+id/alu"
        app:layout_constraintEnd_toStartOf="@+id/bm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Bas" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif-black"
        android:text="Altura"
        app:layout_constraintBottom_toTopOf="@+id/cac"
        app:layout_constraintEnd_toStartOf="@+id/Ld"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alu" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="225dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toTopOf="@+id/Bas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trapecio" />

    <TextView
        android:id="@+id/Rarr"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="92dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Area"
        app:layout_constraintTop_toBottomOf="@+id/cac" />

</androidx.constraintlayout.widget.ConstraintLayout>